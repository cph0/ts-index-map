{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "esModuleInterop": true,
    "outDir": "./dist",
    "jsx": "react",
    "lib": [ "es6", "dom", "es2016", "es2017", "es2019" ],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "resolveJsonModule": true,
    "rootDir": "./src",
    "sourceMap": true,
    "strict": true,
    "target": "ES2015",
    "types": [ "node" ]
  },
  "include": [ "src/**/*" ],
  "exclude": [ "**/node_modules", "**/build", "**/dist", "**/*.md", "**/rollup.config.mjs" ]
}